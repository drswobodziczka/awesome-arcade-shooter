{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "permissions": {
    "defaultMode": "default",

    "deny": [
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(ssh:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(git clean -f:*)",
      "Bash(git filter-branch:*)",
      "Bash(git reflog expire:*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.key)",
      "Read(**/.aws/**)",
      "Edit(package-lock.json)",
      "Edit(pnpm-lock.yaml)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(/etc/passwd)",
      "Read(/etc/shadow)",
      "Edit(./node_modules/**)",
      "Edit(./.git/**)"
    ],

    "allow": [
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(npm:*)",
      "Bash(find:*)",
      "Read(**/*.md)",
      "Read(**/tsconfig.json)",
      "Read(**/package.json)",
      "Read(**/vite.config.*)",
      "Read(**/vitest.config.*)",
      "Read(**/.github/**)",
      "Edit",
      "Write",
      "WebFetch",
      "WebSearch"
    ],

    "ask": [
      "Bash(rm:*)"
    ],

    "disableBypassPermissionsMode": "disable"
  },

  "env": {
    "ANTHROPIC_MODEL": "claude-sonnet-4-5-20250929",
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "NODE_ENV": "development"
  },

  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/enforce-project-guidelines.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/pre-commit.sh"
          },
          {
            "type": "command",
            "command": "./.claude/hooks/pre-pr.sh"
          }
        ]
      }
    ],
    "PostToolUse": [],
    "SessionEnd": []
  },

  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["git"],
    "allowUnsandboxedCommands": true,

    "network": {
      "allowUnixSockets": [],
      "allowLocalBinding": true
    }
  },

  "cleanupPeriodDays": 30
}
