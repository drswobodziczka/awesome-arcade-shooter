{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "permissions": {
    "defaultMode": "default",

    "deny": [
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(ssh:*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.key)",
      "Read(**/.aws/**)",
      "Edit(package-lock.json)",
      "Edit(pnpm-lock.yaml)"
    ],

    "allow": [
      "Bash(git log)",
      "Bash(git diff:*)",
      "Bash(git status)",
      "Bash(npm run:*)",
      "Bash(npm test)",
      "Bash(find:*)",
      "Read(**/*.md)",
      "Read(**/tsconfig.json)",
      "Read(**/package.json)",
      "Read(**/vite.config.*)",
      "Read(**/vitest.config.*)",
      "Read(**/.github/**)"
    ],

    "ask": [
      "Bash(*)",
      "Bash(rm:*)",
      "Edit()",
      "Write()",
      "WebFetch()",
      "WebSearch()"
    ],

    "disableBypassPermissionsMode": false
  },

  "env": {
    "ANTHROPIC_MODEL": "claude-sonnet-4-5-20250929",
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "NODE_ENV": "development"
  },

  "hooks": {
    "SessionStart": [],
    "PostToolUse": [],
    "Stop": []
  },

  "cleanupPeriodDays": 30
}
